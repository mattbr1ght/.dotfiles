sudo mkdir -p /etc/ly &&
sudo cp ~/.dotfiles/ly/config.ini /etc/ly/ &&
echo ":: Copied Ly config to /etc/ly/config.ini"

sudo mkdir -p /usr/share/cowsay/cows/ &&
sudo cp ~/.dotfiles/!custom/*.cow /usr/share/cowsay/cows/ &&
echo ":: Copied custom Cow files to /usr/share/cowsay/cows/"

