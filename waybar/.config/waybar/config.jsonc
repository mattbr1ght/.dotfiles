        "pulseaudio",
        "network",
        // "power-profiles-daemon",
        // "memory",
        "temperature",
        // "backlight",
        "keyboard-state",
        // "sway/language",
        // "battery",
        // "battery#bat2",
        "clock",
        "tray",
        "custom/power"
