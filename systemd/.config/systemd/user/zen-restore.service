[Unit]
Description=Restore Zen Mode state on login
After=default.target

[Service]
Environment="PATH=/home/operator/.local/scripts:$HOME/.local/bin:/bin"
Type=oneshot
ExecStart=/bin/bash -c '[ -f ~/.cache/zen-mode-state ] && zen-mode $(cat ~/.cache/zen-mode-state) || zen-mode 0'

[Install]
WantedBy=default.target
